if test "$1" = ""; then
	(
	echo "mykillps [-x] <searchstring>"
	echo "  will kill all processes whose name contains <searchstring>"
	echo "  -x will kill all processes with <searchstring> anywhere in the call!"
	) > /dev/stderr
	exit 1
fi
