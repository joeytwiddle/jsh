EXECSH=`jgettmp jwatch-do-$1`
NEW=`jgettmp "new-$1"`
OLD=`jgettmp "old-$1"`

echo "$@" > $EXECSH
chmod a+x "$EXECSH"

echo "Just to check: (no aliases since run in sh)"
$EXECSH

$EXECSH > $NEW

if test "x$JWATCHCOMPCOM" = "x"; then
  JWATCHCOMPCOM="jfcsh"
  # JWATCHCOMPCOM="jfc simple oneway"
fi

sleep 1

while [ true ]; do

	mv $NEW $OLD

	$EXECSH > $NEW

	$JWATCHCOMPCOM $NEW $OLD

	sleep 5

	`breakonctrlc`

done

jdeltmp "$NEW" "$OLD" "$EXECSH"
