if [ "$1" = -on ]
then
	ON="$2"
	shift; shift
else
	ON=" 	"
fi

## Unsupported as yet, but should prevent alignment of columns beyond # $UPTO
if [ "$1" = -upto ]
then
	UPTO="$2"
	shift; shift
fi

# column -t -s '	 ' "$@"
# -x ?
# column -t -s ' ' "$@"
column -t -s "$ON" "$@"
