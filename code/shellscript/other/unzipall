## Still buggy, but in different ways.

for X in *.zip; do
	X=`realpath "$X"`
	Y="$X"_unpacked
	mkdir "$Y"
	cd "$Y"
	unzip "$X" ||
	# And because it sometimes segfaults first time round:
	unzip "$X"
	cd ..
done

for X in *.tar.gz *.tgz; do
	X=`realpath "$X"`
	Y="$X"_unpacked
	mkdir "$Y"
	cd "$Y"
	tar xfz "$X"
done
