ARGS="$@"
if [ "$ARGS" = "" ]; then
  FILES="*.jpg *.jpeg *.bmp *.xpm *.gif *.pgm *.ppm *.pcx"
  # FILES="*.mp3"
else
  FILES="$ARGS"
fi

HTMLFILE="index.html"

# EXTRAS=""
EXTRAS="-geometry 200 -interlace Plane"

(

	echo "<html><body>"
	for IMAGE in $FILES
	do echo "<A href=\"$IMAGE\">$IMAGE</A><BR>"
	done
	echo "</body></html>"

) > $HTMLFILE

browse $HTMLFILE

echo "browsepics* will be deleted in 300 seconds"
(sleep 300 ; rm browsepics*.Jpeg $HTMLFILE) &
