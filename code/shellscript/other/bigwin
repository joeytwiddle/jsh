COM="$@"

if [ "$COM" = "" ]; then COM="zsh"; fi

TMPSH=`jgettmp "bigwin.sh"`
(
	echo "$COM"
	echo 'echo "Press <Enter> key to quit"'
	echo "waitforkeypress"
) > "$TMPSH"
chmod a+x "$TMPSH"

# konsole -vt_sz 120x60 -nowelcome -caption "$1" -e sh "$TMPSH" &
xterm -bg "#600000" -geometry 120x50 -e "$TMPSH" &
