ARGS="$@"
if [ "$ARGS" = "" ]; then
  IMAGES="*.jpg *.jpeg *.bmp *.xpm *.gif *.pgm *.ppm *.pcx"
else
  IMAGES="$ARGS"
fi

EXTRAS="-geom 100"
# EXTRAS=""

echo "<html><body>" > "imageIndex.html"
# forall -shell $IMAGES do convert $EXTRAS %w browsepics%n.Jpeg : echo "\"<image src=\\\"browsepics%n.Jpeg\\\"><br>%w<br><br>\"" %p%p "imageIndex.html"
n=0
for w in $IMAGES; do
  echo "$n: $w"
  n=$[$n+1]
  convert $EXTRAS $w browsepics$n.Jpeg
  echo '<image src="browsepics$n.Jpeg"><br>$w<br><br>' >> imageIndex.html
done
echo "</body></html>" >> "imageIndex.html"

browse "imageIndex.html"

echo "browsepics*.Jpeg and imageIndex.html will be deleted in 60 seconds"
(sleep 60 ; "rm" browsepics*.Jpeg imageIndex.html) &