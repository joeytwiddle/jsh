#!/bin/sh

## TODO: test that wc -l gives the same results as awk on, eg. streams with no \n at end, echo's etc.
## Laziest: put the test in the code, with an assert, innit!

docountlines () {
	cat "$@" | wc -l
	# awk " END { print "' NR } ' "$@"
}

if [ ! "$2" ]
then docountlines "$@"
else
	for X
	do echo "$X	"`docountlines "$X"`
	done
fi
