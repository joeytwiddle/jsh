FILE="$HOME/.dircolors"
if test ! -f "$FILE"; then
	if test -f "$JPATH/code/home/.dircolors"; then
		FILE="$JPATH/code/home/.dircolors"
	else
		echo "I am generating a default colour list in $HOME/.dircolors"
		echo "Change it if you want funkier colours"
		dircolors -p > "$FILE"
	fi
fi
dircolors "$FILE" > $HOME/.lscols
