# Note: other aliases are initialised in dirhistorysetup

if test -x "$JPATH/tools/mygrep"; then
	alias grep='mygrep'
fi

if test $JM_COLOUR_LS; then
	XARGS='h --color'
	alias ls="ls -atrF$XARGS"
elif test $JM_DOES_COLOUR; then
	alias ls='fakels'
else
	alias ls='ls -atrF'
fi

alias l='ls -l'
alias dl='ls -ld'

### Note: it's rather important that aliases don't get passed
## down to child shells / processes, because this would likely
## result in infinite loops.
### Er, I think that might be te default anyway!

alias xterm='xtermbg'

alias man='jman'

myhist() {
history 1 | grep "$@"
}
alias hist=myhist

myxv() {
xv -perfect "$@" &
}
alias xv=myxv

alias igrep='grep -i'
