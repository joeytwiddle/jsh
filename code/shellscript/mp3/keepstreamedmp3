SRCDIR="$JPATH/music/streamed/"
DESTDIR="$JPATH/tracks/streamed/"

SRCFILENAME=`"ls" -t "$SRCDIR" | head -n 1`
FILENAME="$SRCFILENAME"
echo "$FILENAME"

mkdir -p "$DESTDIR"
DESTFILE="$DESTDIR/$FILENAME"
while [ -f "$DESTFILE" ]; do
  FILENAME="_$FILENAME"
  DESTFILE="$DESTDIR/$FILENAME";
done
echo "$DESTFILE <- $SRCDIR"

cp "$SRCDIR/$SRCFILENAME" "$DESTFILE"
